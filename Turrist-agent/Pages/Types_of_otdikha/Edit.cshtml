@page
@model Turrist_agent.Pages.Types_of_otdikha.EditModel

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Виды отдыха</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Types_of_otdizha.ID" />
            <div class="form-group">
                <label asp-for="Types_of_otdizha.Naimenovanie" class="control-label"></label>
                <input asp-for="Types_of_otdizha.Naimenovanie" class="form-control" />
                <span asp-validation-for="Types_of_otdizha.Naimenovanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Types_of_otdizha.Ogranicheniya" class="control-label"></label>
                <input asp-for="Types_of_otdizha.Ogranicheniya" class="form-control" />
                <span asp-validation-for="Types_of_otdizha.Ogranicheniya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Types_of_otdizha.Opisanie" class="control-label"></label>
                <input asp-for="Types_of_otdizha.Opisanie" class="form-control" />
                <span asp-validation-for="Types_of_otdizha.Opisanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
